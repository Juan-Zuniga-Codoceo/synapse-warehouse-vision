{
    "name": "warehouse-vision-3d",
    "version": "1.0.0",
    "description": "3D Warehouse Mapping and Location Management System",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "init-db": "node src/database/init_db.js",
        "electron": "electron .",
        "dist": "electron-builder"
    },
    "keywords": [
        "warehouse",
        "3d",
        "inventory",
        "threejs"
    ],
    "author": "Synapse Dev",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "sqlite3": "^5.1.6"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3",
        "nodemon": "^3.0.1"
    },
    "build": {
        "appId": "cl.synapsedev.warehousevision",
        "productName": "Synapse Warehouse Vision",
        "win": {
            "target": "portable",
            "icon": "frontend/src/assets/logo.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "frontend/src/assets/logo.png",
            "category": "Office"
        },
        "files": [
            "**/*",
            "!frontend/node_modules/**/*",
            "!frontend/src/**/*",
            "!frontend/public/**/*",
            "frontend/dist/**/*"
        ],
        "directories": {
            "output": "dist"
        }
    }
}
